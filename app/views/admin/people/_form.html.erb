<%= form_for [:admin, @person] do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @person.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :surname %>
      <%= f.text_field :surname, class: 'form-control' %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :document %>
      <%= f.text_field :document, class: 'form-control' %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <%= f.fields_for :phones do |phone_form| %>
      <div class="form-group col-md-6">
        <%= phone_form.label :code %>
        <%= phone_form.text_field :code, class: 'form-control' %>
      </div>
      <div class="form-group col-md-6">
        <%= phone_form.label :number %>
        <%= phone_form.text_field :number, class: 'form-control' %>
      </div>
      <div class="form-group col-md-6">
        <%= phone_form.label :phone_type %>
        <%= phone_form.text_field :phone_type, class: 'form-control' %>
      </div>
      <div class="form-check col-md-6">
        <%= phone_form.radio_button :preferential, class: 'form-check-input' %>
        <%= phone_form.label :preferential, for: 'person_phones_attributes_0_preferential_classform-check-input' %>
      </div>
    <% end %>
  </div>

  <%= f.submit t('save'), class: 'btn btn-primary' %>
  <%= link_to t('back'), :back, class: 'btn btn-secondary' %>
<% end %>